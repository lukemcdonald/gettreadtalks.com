{
  "name": "treadtalks-gatsby",
  "description": "A Gatsby version of gettreadtalks.com",
  "version": "2.0.0",
  "author": "Luke McDonald (https://lukemcdonald.com/)",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lukemcdonald/gettreadtalks.com"
  },
  "scripts": {
    "build": "NODE_ENV=production run-s build:*",
    "build:gatsby": "gatsby build",
    "ci": "rm -rf node_modules && yarn install --frozen-lockfile",
    "clean": "gatsby clean",
    "dev": "run-p dev:*",
    "dev:gatsby": "gatsby develop",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint . --fix",
    "predeploy": "$npm_execpath run build",
    "preinstall": "npx only-allow yarn",
    "serve": "gatsby serve",
    "start": "$npm_execpath run dev",
    "typecheck": "tsc -b",
    "validate": "run-p lint typecheck"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.5",
    "@heroicons/react": "^2.0.13",
    "@raae/gatsby-remark-oembed": "^0.3.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.8",
    "clsx": "^1.2.1",
    "dotenv": "^16.0.3",
    "firebase": "9.15.0",
    "formik": "^2.2.9",
    "gatsby": "^5.2.0",
    "gatsby-plugin-feed": "^5.2.0",
    "gatsby-plugin-image": "^3.2.0",
    "gatsby-plugin-manifest": "^5.2.0",
    "gatsby-plugin-netlify": "^5.1.0",
    "gatsby-plugin-postcss": "^6.2.0",
    "gatsby-plugin-react-svg": "^3.3.0",
    "gatsby-plugin-robots-txt": "^1.8.0",
    "gatsby-plugin-sharp": "^5.2.0",
    "gatsby-plugin-sitemap": "^6.2.0",
    "gatsby-remark-responsive-iframe": "^6.2.0",
    "gatsby-source-airtable": "^2.3.0",
    "gatsby-source-filesystem": "^5.2.0",
    "gatsby-transformer-remark": "^6.2.0",
    "gatsby-transformer-sharp": "^5.2.0",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-gravatar": "^2.6.3",
    "slugify": "^1.6.5",
    "striptags": "^3.2.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.13.1",
    "@remix-run/eslint-config": "^1.8.2",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.12",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-gravatar": "^2.6.10",
    "@types/react-helmet": "^6.1.6",
    "autoprefixer": "^10.4.13",
    "eslint": "8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esm": "^3.2.25",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ],
  "engines": {
    "node": ">=18"
  }
}
